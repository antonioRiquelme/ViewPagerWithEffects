<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/secondaryColor">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_smaller">

            <TextView
                android:id="@+id/home_title_label"
                style="@style/Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="banking_main_home_title_label" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/margin_smallest">

                <TextView
                    android:id="@+id/balance_text_view"
                    style="@style/Title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="0 â‚¬" />

                <android.support.v7.widget.CardView
                    android:id="@+id/home_subtitle_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:elevation="@dimen/margin_smallest"
                    app:cardBackgroundColor="@color/secondary_color"
                    app:cardCornerRadius="@dimen/margin_smaller"
                    app:contentPadding="@dimen/margin_smallest">

                    <TextView
                        style="@style/BodyAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="banking_main_topup_button_label"
                        android:textAllCaps="true" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/card_management_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_launcher_background"
                android:backgroundTint="@color/green">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_launcher_background"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="@dimen/margin_smallest"
                    android:src="@drawable/ic_launcher_foreground" />

                <ImageButton
                    android:id="@+id/banking_beneficiary_add_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/margin_smaller"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:src="@drawable/ic_launcher_foreground"
                    android:tint="@color/secondary_color" />

                <TextView
                    style="@style/Title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_smaller"
                    android:clickable="false"
                    android:text="banking_main_home_manage_card_label"
                    android:textColor="@color/white" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/home_perform_sepa_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_smaller"
                android:background="@drawable/ic_launcher_background">

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_launcher_foreground"
                    app:backgroundTint="@color/secondary_color"
                    app:elevation="0dp"
                    app:tint="@color/white" />

                <TextView
                    style="@style/Title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_smaller"
                    android:layout_marginTop="@dimen/margin_smaller"
                    android:clickable="false"
                    android:text="banking_main_home_sepa_start_label"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/overlap_card" />

</FrameLayout>