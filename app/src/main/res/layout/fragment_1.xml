<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/secondaryColor">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_small">

            <include
                layout="@layout/account_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium" />

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/custom_swipe_refresh_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/empty_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:elevation="0dp"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/margin_more_giant"
                        android:visibility="gone"
                        tools:background="@color/orange"
                        tools:ignore="UseCompoundDrawables"
                        tools:visibility="visible">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:src="@drawable/ic_launcher_foreground" />

                        <TextView
                            style="@style/Body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_smallest"
                            android:gravity="center_horizontal"
                            android:text="banking_transactions_list_empty_label" />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="1dp"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                </FrameLayout>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/overlap_card" />

</FrameLayout>